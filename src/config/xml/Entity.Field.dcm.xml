<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Tardigrades\Entity\Field" table="field">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="name" type="string" />
        <field name="handle" type="string" length="156" unique="true">
            <gedmo:slug unique="true" style="camel" updatable="false" separator="-" fields="name" />
        </field>
        <field name="created" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updated" type="datetime">
            <gedmo:timestampable on="update"/>
        </field>
        <many-to-one target-entity="FieldConfig" field="fieldConfig" inversed-by="fields" />
        <many-to-one target-entity="FieldType" field="fieldType" inversed-by="fields" />
        <many-to-many field="sections" target-entity="Entity\Section">
            <join-table name="section_field">
                <join-columns>
                    <join-column name="field_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="section_id" referenced-column-name="id" unique="false" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
