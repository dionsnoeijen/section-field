<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity
        name="Tardigrades\Entity\Application"
        table="application"
    >
        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="onPrePersist" />
            <lifecycle-callback type="preUpdate" method="onPreUpdate" />
        </lifecycle-callbacks>
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="name" type="string" />
        <field name="handle" type="string" unique="true" />
        <field name="created" type="datetime" />
        <field name="updated" type="datetime" />
        <one-to-many
            target-entity="Tardigrades\Entity\Language"
            field="languages"
            mapped-by="application"
        />
        <many-to-many field="sections" target-entity="Tardigrades\Entity\Section">
            <join-table name="section_application">
                <join-columns>
                    <join-column
                        name="application_id"
                        referenced-column-name="id"
                    />
                </join-columns>
                <inverse-join-columns>
                    <join-column
                        name="section_id"
                        referenced-column-name="id"
                        unique="false"
                    />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
