<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Tardigrades\Entity\Section" table="section">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="handle" type="string" length="156" unique="true">
            <gedmo:slug unique="true" style="camel" updatable="false" separator="-" fields="name" />
        </field>
        <field name="created" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updated" type="datetime">
            <gedmo:timestampable on="update"/>
        </field>
        <field name="name" type="string" />
        <field name="config" type="json_array" />
        <many-to-many field="fields" target-entity="Entity\Field" mapped-by="sections" />
    </entity>
</doctrine-mapping>
