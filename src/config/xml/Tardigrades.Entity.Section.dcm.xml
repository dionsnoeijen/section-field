<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Tardigrades\Entity\Section" table="section">
        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="onPrePersist" />
            <lifecycle-callback type="preUpdate" method="onPreUpdate" />
        </lifecycle-callbacks>
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="handle" type="string" unique="true" />
        <field name="created" type="datetime" />
        <field name="updated" type="datetime" />
        <field name="name" type="string" />
        <field name="config" type="json_array" />
        <field name="version" type="integer" />
        <one-to-many
            target-entity="Tardigrades\Entity\SectionHistory"
            field="history"
            mapped-by="section"
        />
        <many-to-many
            target-entity="Tardigrades\Entity\Application"
            field="applications"
            mapped-by="sections"
        />
        <many-to-many field="fields" target-entity="Tardigrades\Entity\Field">
            <cascade>
                <cascade-all />
            </cascade>
            <join-table name="section_field">
                <join-columns>
                    <join-column
                        name="section_id"
                        referenced-column-name="id"
                        unique="false"
                        on-delete="CASCADE"
                    />
                </join-columns>
                <inverse-join-columns>
                    <join-column
                        name="field_id"
                        referenced-column-name="id"
                        on-delete="CASCADE"
                    />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>
