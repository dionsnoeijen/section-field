{% extends "master.html.twig" %}

{% block content %}

    <div class="row">
        <div class="col-md-9">
            <h3>Edit a blogpost: {{ slug }}</h3>
        </div>
        <div class="col-md-3">
            <a class="btn btn-default" href="/create-author">Create author</a>
        </div>
    </div>

    {% include 'blog-form.html.twig' with {
        form: sectionForm('Example.Blog.Entity.Blog', {
            slug: slug,
            redirect: '/edit-blog/' ~ slug
        })
    } %}

{% endblock %}
